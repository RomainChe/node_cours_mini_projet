extends layouts/frontend

include includes/_mixins

block head
  //- Inject here JS and styles for this specific page

block content
  .ui.middle.aligned.center.aligned.grid
    .sixteen.wide.ten.wide.tablet.seven.wide.computer.column
      h1 Register

      form.ui.large.form(method="post" action="/register")
        .ui.segment
          +field('text', 'firstName', 'First name')
          +field('text', 'lastName', 'Last name')
          +field('email', 'email', 'your.email@address.tld')
          +field('password', 'password', 'Password')
          +field('password', 'password_confirm', 'Confirm password')
          button(type="submit").ui.fluid.large.teal.submit.button
            | Login
          
          if flash_success
          .alert.alert-success
            each message in flash_success
              p= message
              
          if errorMessage
            .ui.negative.message
              p= errorMessage
            //- +message('success') Success message example
            //- +message('error') Error message example
            //- +message('info') Info message example
            //- +message('warning') Warning message example